{
  "manifest_version": 3,
  "name": "Make Text Lowercase",
  "version": "1.0.0",
  "description": "Right-click to lowercase selected text in input fields",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
